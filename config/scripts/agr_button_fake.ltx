[logic]
active = ph_button@agro_disabled

[ph_button@agro_disabled]
tooltip     = agr_disable_installation_cant_tip
on_info 	= ph_button@agro {+agr_installation_can_disable}

[ph_button@agro]
tooltip     = agr_disable_installation_tip
on_press    = ph_button@agro_wait %=run_postprocess(agr_u_fade) =disable_ui%
on_info 	= ph_button@agro_end {+agr_installation_disabled}

[ph_button@agro_wait]
on_timer = 5000 | %=enable_ui +agr_installation_disabled =agr_disable_installation% ph_button@agro_end

[ph_button@agro_end]